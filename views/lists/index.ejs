<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h2 class="mb-3">List</h2>

      <table class="board-table table table-sm border-bottom" style="text-align: center;">

        <thead class="thead-light">
          <tr>
            <th scope="col" colspan=3 >Lists</th>
          </tr>
        </thead>

        <tbody>
          <% if(lists == null || lists.length == 0){ %>
            <tr>
              <td colspan=3> There is no data to show :( </td>
            </tr>
          <% } %>
          <% lists.forEach(function(list) { %>
            <tr>
              <td>
                <a href="/lists/<%= list.name %>">
       <!-- 1 --> <img src="<%= list.img %>" width="300" height="200"></img>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>

    </div>
  </body>
</html>